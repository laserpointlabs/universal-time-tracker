#!/bin/bash
# Universal Time Tracker CLI Wrapper

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# Python requirements
REQUIRED_PACKAGES="click requests pyyaml"

# Check if Python is available
if ! command -v python3 &> /dev/null; then
    echo "âŒ Python 3 is required but not installed"
    exit 1
fi

# Check if required packages are installed
for package in $REQUIRED_PACKAGES; do
    if ! python3 -c "import $package" &> /dev/null; then
        echo "ğŸ“¦ Installing required package: $package"
        
        # Check if we're in a virtual environment
        if [[ -n "$VIRTUAL_ENV" ]] || [[ -n "$CONDA_DEFAULT_ENV" ]]; then
            # In virtual environment - use pip without --user
            pip3 install $package || {
                echo "âŒ Failed to install $package"
                echo "ğŸ’¡ Try: pip3 install $package"
                exit 1
            }
        else
            # Not in virtual environment - use --user
            pip3 install --user $package || {
                echo "âŒ Failed to install $package"
                echo "ğŸ’¡ Try: pip3 install --user $package"
                exit 1
            }
        fi
    fi
done

# Run the CLI
python3 "$SCRIPT_DIR/tt.py" "$@"
